{
  "name": "pcesports.com",
  "description": "PCE",
  "version": "5.0.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxorlovsky/pcesports.com"
  },
  "scripts": {
    "eslint": "eslint ./frontend/src/",
    "stylelint": "stylelint \"./frontend/**/*.scss\"",
    "dev": "cd frontend && vite",
    "build": "cd frontend && tsc -b && vite build",
    "release": "git pull && npm install && npm run build",
    "preview": "vite preview"
  },
  "dependencies": {
    "bootstrap": "5.3.3",
    "eslint": "^8.28.0",
    "git-commit-msg": "^0.3.0",
    "pre-commit": "^1.2.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.26.1",
    "sass-embedded": "1.78.0",
    "typescript": "5.5.4"
  },
  "pre-commit": [
    "eslint",
    "stylelint"
  ],
  "git-commit-hook": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "refactor",
      "style",
      "test",
      "revert",
      "merge",
      "balance"
    ],
    "lineLength": 120
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "8.4.0",
    "@typescript-eslint/parser": "8.4.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "postcss-scss": "^4.0.9",
    "stylelint": "16.9.0",
    "stylelint-config-standard": "36.0.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  }
}
